{
  "name": "mini-ecommerce",
  "version": "1.0.0",
  "description": "Mini ecommerce for small business",
  "main": "./dist-server/index.js",
  "scripts": {
    "start": "npm run build && npm run node-start",
    "build": "npm run react-build && npm run node-build",
    "test": "jest",
    "react-clean": "rimraf dist-react",
    "react-build": "npm run react-clean && node src/client/config/scripts/build.js",
    "react-test": "jest react",
    "node-start": "npm run node-build && npm run node-watch",
    "node-clean": "rimraf dist-node",
    "node-build": "npm run node-clean && npm run node-build-ts",
    "node-build-ts": "tsc --p src/server/config/tsconfig.json",
    "node-lint": "tslint -c tslint.json -p src/server/config/tsconfig.json",
    "node-watch": "concurrently -k -p \"[{name}]\" -n \"Type,Node\" -c \"cyan.bold,green.bold\" \"npm run node-watch-ts\" \"nodemon dist-server/index.js -q\" --kill-others",
    "node-watch-ts": "tsc -w --p src/server/config/tsconfig.json",
    "node-test": "jest server"
  },
  "author": "phanhoc",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.16.2",
